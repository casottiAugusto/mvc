<h1>Todas as tasks cadastradas</h1>
<ul class="task-list">
  {{#each tasks}}
    <li>{{this.title}}
      -
      {{#if this.done}}Conclu√≠da{{else}}Pendente{{/if}}

      <span class="actions">
        <a href="">
          <i class="bi bi-check2"></i>
        </a>
        <a href="/tasks/edit/{{this.id}}">
          <i class="bi bi-pencil-square"></i>
        </a>
        <a href="">
          <form action="/tasks/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}" />
            <button type="submit">
              <i class="bi bi-x-lg"></i>
            </button>
          </form>
        </a>
      </span>
    </li>

  {{/each}}
</ul>